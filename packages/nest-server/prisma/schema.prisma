// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int          @id @default(autoincrement())
  username      String       @unique
  publicAddress String
  hPassword     String
  ePrivateKey   String
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  Collection    Collection[]
}

model Collection {
  id          Int         @id @default(autoincrement())
  name        String      @unique
  deployed    Boolean     @default(false)
  chain       Chain       @default(Mainnet)
  standard    Standard    @default(ERC1155)
  description String?
  image       String?
  externalUrl String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  studio      User        @relation(fields: [studioId], references: [id])
  studioId    Int
  Nft         Nft[]
  Attribute   Attribute[]
}

model Nft {
  id           Int         @id @default(autoincrement())
  tokenId      Int         @unique
  name         String?
  description  String?
  image        String?
  attributes   Attribute[]
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  collection   Collection  @relation(fields: [collectionId], references: [id])
  collectionId Int
}

model Attribute {
  id           Int         @id @default(autoincrement())
  /// if null, then value becomes generic
  traitType    String?
  /// value pair of key traitType
  value        String
  /// To comply with opensea metadata standards
  displayType  DisplayType
  Nft          Nft?        @relation(fields: [nftId], references: [id])
  nftId        Int?
  Collection   Collection  @relation(fields: [collectionId], references: [id])
  collectionId Int
}

enum Standard {
  ERC1155
  ERC721
}

enum DisplayType {
  Date
  Number
  String
}

enum Chain {
  Mainnet
  Goerli
  Localhost
  Arbitrum
  Polygon
  BSC
  Optimism
}
